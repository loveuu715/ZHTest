<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/tv_house_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="标题"
        android:textColor="@android:color/white"
        android:textSize="21dp"/>

    <ImageView
        android:id="@+id/iv_house_toolbar_right"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:src="@mipmap/search_icon"/>

    <ImageView
        android:id="@+id/iv_house_toolbar_right1"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/iv_house_toolbar_right"
        android:layout_toStartOf="@+id/iv_house_toolbar_right"
        android:padding="13dp"
        android:src="@mipmap/add_house_source_icon"/>

</RelativeLayout>